---
layout: layouts/base.njk
pagination:
  data: medium.posts
  size: 1
  alias: item
permalink: posts/{{ item.path }}/index.html
---

<p class="meta">Published on {{ item.pubDate | date }}</p>
<h2>{{ item.title }}</h2>
<div class="post-content">
  {{ item['description'] | safe }}
  
  <p><a href="{{ item['link'] }}" target="_blank">Read post</a></p>
</div>

