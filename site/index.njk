<div id="columns">
{% for item in medium.post %}
  <figure>
 
  <a href="/post/{{ item.path }}">    
    <h3>{{ item.title }}</h3>   
     <figcaption>
    {{ item.description | safe }}
   </figcaption>
    <p class="meta">{{ item.pubDate | date }}</p>
  </figure>
  </a>
 {% endfor %}
</div>
